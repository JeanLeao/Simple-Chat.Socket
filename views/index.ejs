<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
        <h1>Chat</h1>
        <div id="chat">
            
        </div><br>
        <input type="text" id="msg"><br>
        <button onclick="Envio()">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.3/socket.io.js"></script>
<script>
    var socket = io('http://localhost:2000');

    socket.on("disconnect",()=>{  // CHECANDO DESCONEXÃƒO NO FRONT END E PASSANDO PARA O CONSOLE.
        console.log('Desconectado');
    })

    socket.on("campo-volta", (data) => {
        var chat = document.getElementById("chat");
        var p = document.createElement("p");
        p.innerHTML = data;
        chat.append(p);
        console.log(data)
   })

    function Envio(){
        var campoInput = document.getElementById("msg");
        socket.emit("campo",campoInput.value)
    }
    

</script>
</html>